@model List<MagicVilla_Web.Models.DTO.VillaDTO>
@{
    ViewData["Title"] = "IndexVilla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de Villas</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" asp-action="CrearVilla" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i></a>
        </div>

        <table class="table ">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Ocupante</th>
                    <th>Tarifas</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Ocupantes</td>
                        <td>@((item.Tarifa).ToString("c"))</td>
                        <td>
                            <a asp-controller="Villa" asp-action="ActualizarVilla" class="btn btn-outline-success"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Villa" asp-action="EliminarVilla" class="btn btn-outline-danger"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

